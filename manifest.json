{
  "manifest_version": 3,
  "name": "Dark Mode Websites",
  "version": "1.0.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*", "*://*.google.com/*"],
      "js": ["src/content/index.ts"]
    }
  ]
}
